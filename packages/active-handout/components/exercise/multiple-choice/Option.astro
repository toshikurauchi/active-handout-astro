---
// This component is only used to make it easier to write the mdx.
// The content of this component is extracted with rehype and then
// used to generate the actual React component.
interface Props {
  points?: number;
  correct?: boolean;
}

let { points, correct } = Astro.props;
if (correct) {
  points = points || 100;
}
if (!points) {
  points = 0;
}
---

<div class="multiple-choice-option" data-points={points}>
  <slot />
</div>
