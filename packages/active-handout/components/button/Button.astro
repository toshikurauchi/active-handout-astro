---
// We will probably deprecate this, so avoid using it if possible.
import type { HTMLAttributes } from "astro/types";
import type BaseProps from "./props";

type Props = HTMLAttributes<"button"> & BaseProps;

const { primary, transparent, colorScheme, leftImg, rightImg, ...props } =
  Astro.props;
---

<button
  class={`button ${transparent ? "transparent" : primary ? "primary" : ""} ${
    colorScheme ? colorScheme : ""
  }`}
  {...props}
>
  {leftImg && <img src={leftImg} class="leftImg" />}
  <span class="buttonContent"><slot /></span>
  {rightImg && <img src={rightImg} class="rightImg" />}
</button>

<style lang="scss">
  @use "./styles.module.scss";
</style>
