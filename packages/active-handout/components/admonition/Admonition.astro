---
import type AdmonitionProps from "./props";

interface Props extends AdmonitionProps {}

const {title, collapsible, collapsed, type="default"} = Astro.props;
---

{collapsible &&
  <details
    class:list={["admonition", type]}
    open?={collapsed}
  >
    <summary class="admonition-title">{title}</summary>
    <div class="admonition-content">
      <slot></slot>
    </div>
  </details>
}
{!collapsible &&
  <div class:list={["admonition", type]}>
    {title &&
      <div class="admonition-title">{title}</div>
    }
    <div class="admonition-content">
      <slot></slot>
    </div>
  </div>
}

<style lang="scss">
  @use "./styles.module.scss";
</style>
