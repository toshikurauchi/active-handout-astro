---
import config from "virtual:active-handout/user-config";
import AuthPage from "../layout/AuthPage.astro";
import RegistrationForm from "../fragments/registration/ReactRegistrationForm.tsx";
import { useTranslations } from "../utils/translations";

const t = useTranslations(config.lang);
---

<AuthPage title={t("auth.register-title")}>
  <div class="form-container">
    <h1>{t("auth.register-title")}</h1>

    <RegistrationForm action="/api/auth/register" client:visible />

    <p class="has-account">
      {t("auth.has-account")}
      <a href="/signin">{t("auth.signin")}</a>
    </p>
  </div>
</AuthPage>

<style>
  p.has-account {
    font-size: var(--fnt-sz--1);
    margin-top: 3em;
  }
</style>
